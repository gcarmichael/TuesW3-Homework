<form action='/calculate' method='get'>
  First number:<input type='text' name='first'/>
  Operator:<input type='text' name='operator'/>
  Second number:<input type='text' name='second'/>
  <button>Calculate!</button>
</form>

<% if @result %>
<section>
  <header>
    <h1>Result</h1>
  </header>
  <p>The first number was: <%= @first %>.</p>
  <p>The operator was: <%= @operator %>.</p>
  <p>The second number was: <%= @second %>.</p>
  <hr/>
  <p>The result of <%= @first %> <%= @operator %> <%= @second %> is <%= @result %>.</p>
</section>
<p>The result is <%= @result %>.</p>
<% end %>